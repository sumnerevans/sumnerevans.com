<aside class="webring">
  <div class="header">
    <h3>
      ARTICLES FROM BLOGS I FOLLOW
    </h3>
    <span class="attribution">
      Generated by
      <a href="https://git.sr.ht/~sircmpwn/openring" target="_blank" rel="external">openring<i class="fa fa-external-link"></i></a>
    </span>
  </div>
  <section class="articles">
    <ul>
      {{- range .Articles -}}
        <li>
          <b><a href="{{.Link}}" target="_blank" rel="external">{{.Title}}<i class="fa fa-external-link"></i></a></b>
          <small class="source">
            via <a href="{{.SourceLink}}" target="_blank" rel="external">{{.SourceTitle}}<i class="fa fa-external-link"></i></a> on {{.Date | datef "2006-01-02"}}
          </small>
        </li>
      {{- end -}}
    </ul>
  </section>
</aside>
